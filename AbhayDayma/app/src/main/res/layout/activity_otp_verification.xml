<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/verificationLayout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".OtpVerificationActivity">


    <TextView
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:layout_marginBottom="80dp"
        android:background="@color/pink"
        android:text="OTP Verification!"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp"
        style="@style/TextAppearance.AppCompat.Body1"
        android:text="Enter your Phone Number" />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:ems="10"
        android:hint="Enter 10 digit phone number here"
        android:inputType="phone" />

    <Button
        android:id="@+id/takeNumberBtn"
        android:textAlignment="center"
        android:elevation="4dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="100dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btnbackground"
        android:text="Go" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/red"
        android:layout_gravity="left"
        android:padding="15dp"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        style="@style/TextAppearance.AppCompat.Body1"
        android:text="You will receive an otp soon on this number." />


<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:src="@drawable/undraw_joyride_re_968t"
    android:layout_marginBottom="50dp"
    />

</LinearLayout>